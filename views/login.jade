extends layout
block content
  .container
      .row
          .col-sm-6.col-md-4.col-md-offset-4
            h1.text-center.login-title Login to <strong>Whacker!</strong>
            .account-wall
              img.profile-img(src='images/soldier.jpg', alt='')
              .form-signin
                input.form-control(type='text', id='player-name', placeholder='Username', required='required', autofocus='autofocus')
